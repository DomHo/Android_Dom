<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSetPasscode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Set background passcode"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewbg1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:src="@drawable/background1"
            android:onClick="onClickbg1"/>

        <ImageView
            android:id="@+id/imageViewbg2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:src="@drawable/background2"
            android:onClick="onClickbg2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewbg3"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:src="@drawable/background3"
            android:onClick="onClickbg3"/>

        <ImageView
            android:id="@+id/imageViewbg4"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:onClick="onClickbg4"
            android:src="@drawable/background4" />

    </LinearLayout>

    <TextView
        android:id="@+id/Choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="Choose"
        android:textSize="30sp"
        android:textColor="#000000"
        android:onClick="onClickChoose"/>

</LinearLayout>