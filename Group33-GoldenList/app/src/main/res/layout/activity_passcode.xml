<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llPasscodeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPasscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Enter your passcode"
        android:textColor="#000000"
        android:textSize="35sp"/>

    <TextView android:id="@+id/tvPasscodeWrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="Wrong passcode\nPlease enter the password again"
        android:textColor="#000000"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/immk1"
            android:src="@drawable/icmk"
            android:layout_height="30dp"
            android:layout_width="30dp" />
        <ImageView
            android:id="@+id/immk2"
            android:src="@drawable/icmk"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/immk3"
            android:src="@drawable/icmk"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/immk4"
            android:src="@drawable/icmk"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="1"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="2"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="3"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="4"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="5"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="6"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="7"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="8"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center">

                <Button
                    android:id="@+id/btnNumber9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_background"
                    android:text="9"
                    android:textSize="35sp"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNumber0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_background"
                android:text="0"
                android:textSize="35sp"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
